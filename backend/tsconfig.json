{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "es2020",
    "module": "commonjs",

    "lib": ["es2020"],

    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true
  }
}
